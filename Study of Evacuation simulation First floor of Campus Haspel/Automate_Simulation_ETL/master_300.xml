<?xml version="1.0" encoding="UTF-8" ?>
<JuPedSim project="JPS-Project" version="0.7" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <header>
        <!-- seed used for initialising random generator -->
        <seed>1254</seed>
        <max_sim_time>1000</max_sim_time>
        <!-- geometry file -->
        <geometry>geometry.xml</geometry>
        <events_file>{{events_file_name}}</events_file>
        <show_statistics>true</show_statistics>
        <output path="{{results_file_path}}" />
        <!-- trajectories file and format -->
        <trajectories format="plain" fps="8">
            
        </trajectories>
    </header>
    <!-- traffic information: e.g closed doors -->
    <traffic_constraints>
        <doors>
            <!-- <door trans_id="1" state="open" outflow="1"/> -->
		 <file>scenario_2/traffic_Scenario_02.xml</file>
        </doors>
    </traffic_constraints>
    
    <routing>
      <goals>
        <!-- possible waiting areas or goals outside of the geometry -->
      </goals>
    </routing>

    <!--persons information and distribution -->
    <agents operational_model_id="{{operational_model_id}}">
        <agents_distribution>
            <!Hall>
            <group group_id="0" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="0" number="10"/> 
            <!Buero GM>
            <group group_id="4" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="1" number="10"/>
            <!GM>
            <group group_id="5" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="2" number="10"/>
            <!Hörsaal>
            <group group_id="1" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="3" number="120"/>
            <!Kühlraum - Lager>
            <group group_id="6" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="4" number="10"/>
            <!Mensa>
            <group group_id="2" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="6" number="120"/>
            <!Speulkuech>
            <group group_id="3" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="7" number="10"/>
            <!Treppenhause>
            <group group_id="4" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="8" number="5"/>
            <!Vorbereitung>
            <group group_id="4" agent_parameter_id="1" router_id="1" goal_id= "-1" room_id ="9" number="5"/>
        </agents_distribution>
    </agents>
    <!-- These parameters may be overwritten -->
    <operational_models>
        <model operational_model_id="1" description="gcfm">
            <model_parameters>
                <stepsize>0.01</stepsize>
                <exit_crossing_strategy>3</exit_crossing_strategy>
                <linkedcells enabled="true" cell_size="2.2" />
                <force_ped nu="0.3" dist_max="3" disteff_max="2" interpolation_width="0.1" />
                <force_wall nu="0.2" dist_max="2" disteff_max="1" interpolation_width="0.1" />
            </model_parameters>
            <agent_parameters agent_parameter_id="1">
                <v0 mu="1.0" sigma="0.0" />
                <bmax mu="0.15" sigma="0.001" />
                <bmin mu="0.15" sigma="0.001" />
                <amin mu="0.15" sigma="0.001" />
                <tau mu="0.5" sigma="0.001" />
                <atau mu="0.0" sigma="0.000" />
            </agent_parameters>
        </model>
        <model operational_model_id="3" description="Tordeux2015">
            <model_parameters>
                <stepsize>0.05</stepsize>
                <exit_crossing_strategy>8</exit_crossing_strategy>
                <linkedcells enabled="true" cell_size="2.2" />
                <force_ped a="5" D="0.2" />
                <force_wall a="5" D="0.02" />
            </model_parameters>
            <agent_parameters agent_parameter_id="1">
                <v0 mu="1.34" sigma="0.25" />
                <v0_upstairs mu="0.668" sigma="0.167" />
                <v0_downstairs mu="0.750" sigma="0.188" />
                <v0_idle_escalator_upstairs mu="0.5" sigma="0.0" />
                <v0_idle_escalator_downstairs mu="0.5" sigma="0.0" />
                <bmax mu="0.15" sigma="0.0" />
                <bmin mu="0.15" sigma="0.0" />
                <amin mu="0.15" sigma="0.0" />
                <atau mu="0." sigma="0.0" />
                <tau mu="0.5" sigma="0.0" />
                <T mu="1.2" sigma="0.0" />
            </agent_parameters>
        </model>
    </operational_models>
    <route_choice_models>
        <router router_id="1" description="ff_global_shortest">
            <parameters />
        </router>
    </route_choice_models>
</JuPedSim>
